# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:filetype=tcl:et:sw=4:ts=4:sts=4
# $Id: Portfile 77796 2011-04-13 18:11:43Z devans@macports.org $

PortSystem          1.0

name                cogl
version             1.12.0
set branch          [string range $version 0 [expr [string last "." $version] - 1]]
categories          graphics
maintainers         devans openmaintainer
platforms           darwin macosx
description         Clutter OpenGL support library
long_description    Clutter is an open source software library for \
                    creating fast, visually rich and animated graphical \
                    user interfaces.
homepage            http://www.clutter-project.org/
master_sites        http://download.gnome.org/sources/${name}/${branch}/
use_xz	            yes


checksums           md5     2ec55647764ee208182fbe07ee9f7e9c \
                    sha1    f759e9945ba728769ec8cb2c7ec41e709757bf6d \
                    rmd160  85b548feaa113cbdcd9010c45bf0e8110ece2e78

depends_build       port:pkgconfig

depends_lib         port:cairo \
                    port:pango \
                    port:gdk-pixbuf2 \
                    port:mesa \
                    port:xorg-libXdamage \
                    port:xorg-libXcomposite \
                    port:json-glib

configure.args      --with-x \
                    --x-includes=${prefix}/include \
                    --x-libraries=${prefix}/lib \
                    --enable-introspection=no \
                    --disable-gtk-doc

platform macosx {
    variant no_x11 requires quartz {
    }

    variant quartz {
        depends_lib-delete    port:mesa \
                              port:gdk-pixbuf2 \
                              port:xorg-libXdamage \
                              port:xorg-libXcomposite

        configure.args-delete --with-x \
                              --x-includes=${prefix}/include \
                              --x-libraries=${prefix}/lib

        configure.args-append --enable-glx=no \
                              --enable-gdb-pixbuf=no \
                              --enable-quartz-image=yes
    }
}

livecheck.type      regex
livecheck.url       http://download.gnome.org/sources/${name}/${branch}/
livecheck.regex     "${name}-(\\d+(?:\\.\\d+)*)${extract.suffix}"
