# $Id: Portfile 103325 2013-02-22 03:58:11Z rmstonecipher@macports.org $

PortSystem      1.0

name            clutter-gst
version         2.0.2
license         LGPL-2.1
set branch      [string range $version 0 [expr [string last "." $version] - 1]]
categories      graphics
description     Clutter GStreamer integration library.
long_description Clutter-GStreamer (clutter-gst) is an integration library \
                 for using GStreamer with Clutter.  Its purpose is to implement \
                 the ClutterMedia interface using GStreamer.
maintainers     nodamage.com:nodamage openmaintainer
platforms       darwin
homepage        http://www.clutter-project.org/
master_sites    gnome:sources/${name}/${branch}
use_xz          yes

patchfiles      patch-clutter-gst-clutter-gst-video-sink.c.diff

checksums           sha256  577957598d6ee407348dc5d78879da2b212ae54fb3071f86f8409e393dde34c4 \
                    rmd160  f18fbb17d188eab30b0488a6e673cdb9fc2218a1

depends_build \
    port:pkgconfig

depends_lib \
    port:clutter \
    port:gstreamer1-gst-plugins-base

configure.args  --enable-introspection=no

configure.cflags-append         [exec pkg-config --cflags gdk-pixbuf-2.0]
configure.ldflags-append        [exec pkg-config --libs gdk-pixbuf-2.0]

livecheck.url   http://ftp.gnome.org/pub/gnome/sources/${name}/${branch}/
